@model FinalFinal.Models.Kontakt
@using FinalFinal.Models;

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h1>Upravit kontakt</h1>

    <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="d-flex">
                <div class="form-group p-2 m-1">
                    <label asp-for="Jmeno" class="control-label m-1">Jméno</label>
                    <input asp-for="Jmeno" class="form-control " placeholder="Jan" />
                    <span asp-validation-for="Jmeno" class="text-danger"></span>
                </div>
                <div class="form-group p-2 m-1">
                <label asp-for="Prijmeni" class="control-label  m-1">Příjmení</label>
                    <input asp-for="Prijmeni" class="form-control " placeholder="Novák" />
                    <span asp-validation-for="Prijmeni" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group p-2 m-1">
                <label asp-for="Email" class="control-label  m-1">Email</label>
                    <input asp-for="Email" class="form-control " placeholder="JanNovak@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group p-2 m-1">
                <label asp-for="TelCislo" class="control-label  m-1">Telefon</label>
                    <input asp-for="TelCislo" class="form-control " placeholder="731234567" />
                    <span asp-validation-for="TelCislo" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group p-2 m-1">
                <label asp-for="Ulice" class="control-label  m-1">Ulice</label>
                    <input asp-for="Ulice" class="form-control " placeholder="Pražská 10" />
                    <span asp-validation-for="Ulice" class="text-danger"></span>
                </div>
                <div class="form-group p-2 m-1">
                <label asp-for="Mesto" class="control-label m-1">Město</label>
                    <input asp-for="Mesto" class="form-control " placeholder="Praha 1" />
                    <span asp-validation-for="Mesto" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group p-2 m-1">
                <label asp-for="SmerovaciCislo" class="control-label m-1">PSČ</label>
                    <input asp-for="SmerovaciCislo" class="form-control" placeholder="110000" />
                    <span asp-validation-for="SmerovaciCislo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group p-2 m-1">
            <button type="submit" value="Save" class="btn accept">Uložit</button>  |

            <a asp-action="Index">Zpět</a>
            </div>
        </form>
        
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
